<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B.View.RecipeView"
             Title="RecipeView"
             xmlns:vm="clr-namespace:B.ViewModel" 
             x:DataType="vm:RecipeViewModel">
    <StackLayout>
        <Label Text="{Binding RecipeId}" TextColor="Black"></Label>
        <Entry Text="{Binding RecipeId}"></Entry>

        <Label Text="{Binding RecipeName}" TextColor="Black"></Label>
        <Entry Text="{Binding RecipeName}"></Entry>

        <Label Text="{Binding RecipeDescription}" TextColor="Black"></Label>
        <Entry Text="{Binding RecipeDescription}"></Entry>

        <Label Text="{Binding RecipeId}" TextColor="Black"></Label>
        <Entry Text="{Binding RecipeId}"></Entry>
    </StackLayout>
</ContentPage>