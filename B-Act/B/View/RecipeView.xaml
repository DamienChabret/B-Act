<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="B.View.RecipeView"
             Title="RecipeView"
             xmlns:vm="clr-namespace:B.ViewModel" 
             x:DataType="vm:RecipeViewModel">
    <VerticalStackLayout>
        <Label Text="{Binding ID}" TextColor="Black"></Label>
        <Label Text="{Binding Name}" TextColor="Black"></Label>
        <Label Text="{Binding Description}" TextColor="Black"></Label>
        <Label Text="{Binding Rating}" TextColor="Black"></Label>
    </VerticalStackLayout>
</ContentPage>